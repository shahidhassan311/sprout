.salesactivityview
    DashboardController(v-bind:heading="activities",v-bind:editbtn='true',v-bind:createbtn='true',v-bind:attachmentbtn='true',v-bind:actionbtn='true',v-bind:duplicate='true',v-bind:deletebtn='true', v-bind:links="btnlinks")
        .col-sm-6(style='padding:0px;' ,slot='heading')
            h4.samodashheading(style="font-size: 18px;display: inline-block;padding-right: 5px;") Sales Activity / {{type_message}}
            span {{sales_team_name}}
        span.o_pager_value(slot='page') {{counter}}
            |  /
            span.o_pager_limit(style="padding-right: 6px;") {{num}}

            span.btn-group.btn-group-sm
                button.fa.fa-chevron-left.btn.btn-icon.o_pager_previous#num10(@click="counter--",style='background-color:white;border-color: #adadad;color: #4c4c4c;')(type='button', accesskey='p')
                button.fa.fa-chevron-right.btn.btn-icon.o_pager_next#num01(@click="counter++",style='background-color:white;border-color: #adadad;color: #4c4c4c;')(type='button', accesskey='n')
    .o_content(style='margin-left: -15px;margin-right: -15px;')
        .o_form_view.o_form_nosheet.o_form_readonly(style='padding:0px;padding-left: 16px;')
            .oe_title
                label.o_form_label.o_form_label_help.oe_edit_only(data-original-title='', title='')
                    | Message Type
                h1
                    span.o_form_field.o_form_required {{type_message}}
                    button.o_field_translate.fa.fa-globe.btn.btn-link(type='button')
            .o_group
                table.o_group.o_inner_group.o_group_col_6
                    tbody
                        tr
                            td.o_td_label(colspan='1')
                                label.o_form_label.o_form_label_empty.o_form_label_false
                                    | Sales Team
                            td(colspan='1', style='width: 100%;')
                                span {{sales_name}}

                        tr
                            td.o_td_label(colspan='1')
                                label.o_form_label.o_form_label_help.o_form_label_empty.o_form_label_false
                                    | Description
                            td(colspan='1', style='width: 100%;')
                                span {{desc}}
                                textarea.o_form_textarea.o_form_field(style='position: absolute; opacity: 0; height: 10px; top: -10000px; left: -10000px; width: 10px;')
                                button.o_field_translate.fa.fa-globe.btn.btn-link(type='button')
                        tr
                            td.o_td_label(colspan='1')
                                label.o_form_label.o_form_label_help(data-original-title='', title='')
                                    | Number of days
                            td(colspan='1', style='width: 100%;')
                                span.o_form_field.o_form_field_number {{no_of_days}}
                        tr
                            td.o_td_label(colspan='1')
                                label.o_form_label.o_form_label_help.o_form_label_false(data-original-title='', title='')
                                    | Default
                            td(colspan='1', style='width: 100%;')
                                .o_checkbox.o_form_field_boolean.o_form_field
                                    input(type='checkbox', name='default', disabled='', v-bind:true-value='1', v-bind:false-value='0', v-model='default_value')
                                    span
                table.o_group.o_inner_group.o_group_col_6
                    tbody
                        tr
                            td.o_td_label(colspan='1')
                                label.o_form_label.o_form_label_empty
                                    | Recommended Next Activities
                            td(colspan='1', style='width: 100%;')
                                span.badge(style='background-color: #B6BBBF;') {{ next_activity_id }}


