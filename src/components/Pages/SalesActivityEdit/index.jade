.salesactivityview
    DashboardController(v-bind:heading="activities",v-bind:savedbtn='true',v-bind:discardbtn='true',v-bind:attachmentbtn='true',v-bind:actionbtn='true', v-bind:links="btnlinks")
    .o_content(style='margin-left: -15px;margin-right: -15px;')
        .o_view_manager_content
            .o_form_view.o_form_nosheet.o_form_editable
                .oe_title
                    label.o_form_label.o_form_label_help.oe_edit_only(for='o_field_input_354', data-original-title='', title='')
                        | Message Type
                    h1
                        input#o_field_input_354.o_form_input.o_form_field.o_form_required.topinput(type='text', value='Email', v-model='type_message')
                        button.o_field_translate.fa.fa-globe.btn.btn-link.o_translate_active.icon.ic(type='button',style='margin-left: -24px;')
                .o_group
                    table.o_group.o_inner_group.o_group_col_6
                        tbody
                            tr
                                td.o_td_label(colspan='1')
                                    label.o_form_label
                                        | Sales Team {{sales_name}}
                                td(colspan='1', style='width: 100%;')
                                    select(v-model='sales_name')
                                        option(v-for='sale_name_team_p in sales_team_drop', v-bind:value="sale_name_team_p.id")
                                            | {{ sale_name_team_p.name }}
                            tr
                                td.o_td_label(colspan='1')
                                    label.o_form_label.o_form_label_help
                                        | Descriptions
                                td(colspan='1', style='width: 100%;')
                                    textarea.o_form_textarea.o_form_field(rows='6', name='description',v-model='desc', style='resize: horizontal; height: 50px;')
                                    textarea.o_form_textarea.o_form_field(disabled='', style='position: absolute; opacity: 0; height: 10px; top: -10000px; left: -10000px; width: 639px;')
                                    textarea.o_form_textarea.o_form_field(disabled='', style='position: absolute; opacity: 0; height: 10px; top: -10000px; left: -10000px; width: 10px;')
                                    button.o_field_translate.fa.fa-globe.btn.btn-link.o_translate_active(type='button')
                            tr
                                td.o_td_label(colspan='1')
                                    label.o_form_label.o_form_label_help(for='o_field_input_357', data-original-title='', title='')
                                        | Number of days
                                td(colspan='1', style='width: 100%;')
                                    input#o_field_input_357.o_form_input.o_form_field.o_form_field_number(type='text', v-model='no_of_days')
                            tr
                                td.o_td_label(colspan='1')
                                    label.o_form_label.o_form_label_help(for='o_field_input_358', data-original-title='', title='')
                                        | Default
                                td(colspan='1', style='width: 100%;')
                                    .o_checkbox.o_form_field_boolean.o_form_field
                                        input#o_field_input_358(type='checkbox', name='default')
                                        span
                    table.o_group.o_inner_group.o_group_col_6
                        tbody
                            tr
                                td.o_td_label(colspan='1')
                                    label.o_form_label
                                        | Recommended Next Activities
                                td(colspan='1', style='width: 100%;')
                                    select(v-model='next_activity_id')
                                        option(v-for='sale_name_team_d in sales_activity_recommend', v-bind:value="sale_name_team_d.id")
                                            | {{ sale_name_team_d.message_type }}


